{
  "compilerOptions": {
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["app/_config/*"],
      "@environment/*": ["environments/*"],
      "@shared/*": ["src/_shared/*"],
      "@helpers/*": ["src/helpers/*"],
      "@interface/*": ["src/interface/*"],
      "@guard/*": ["src/SushiGuard/*"]
  },
  "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Commonjs",
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable"],
    "strict": true,
    "types": ["node"],
    "target": "es2020"
  }
}