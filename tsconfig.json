{
  "compilerOptions": {
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["app/_config/*"],
      "@environment/*": ["environments/*"],
      "@shared/*": ["src/_shared/*"],
      "@helpers/*": ["src/helpers/*"],
      "@interface/*": ["src/interface/*"],
      "@guard/*": ["src/SushiGuard/*"],
    },
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "rootDir": "./src",
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
}